	xf86-input-spaceorb, xf86-input-summa, xf86-input-synaptics [pkg/47082],
	xf86-input-tek4957, xf86-input-ur98, xf86-video-amd, xf86-video-dummy,
	xf86-video-freedreno, xf86-video-glide, xf86-video-impact,
